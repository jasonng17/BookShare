<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Listing your books</h1>

<table>
  <thead>
    <tr>
      <th>Book Image</th>
      <th>Title</th>
      <th>Author</th>
      <th>Isbn</th>
      <th>Publisher</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= image_tag(book.image_url, class: 'list_image') %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td><%= book.publisher %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Show', user_book_path(@user, book) %></td>
        <td><%= link_to 'Edit', edit_user_book_path(@user, book) %></td>
        <td><%= link_to 'Delete', [@user, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


